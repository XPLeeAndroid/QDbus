<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="left"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="20dp"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/md_brown_500"
            android:id="@+id/tv_chepai"
            android:text="車盤"
            android:drawableLeft="@drawable/ic_directions_bus_brown_500_18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/md_brown_500"
            android:id="@+id/tv_haiyou"
            android:text="車盤"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_transfer_within_a_station_brown_500_18dp"/>
    </LinearLayout>
<TextView
    android:id="@+id/tv_child1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:paddingLeft="20dp"
    android:textColor="@color/md_brown_500"
    android:gravity="center_horizontal"
    android:drawableLeft="@drawable/ic_place_brown_500_18dp"
    android:text="child"/>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/md_brown_300"
        android:layout_marginTop="6dp"
        android:layout_height="0.5dp" />

</LinearLayout>